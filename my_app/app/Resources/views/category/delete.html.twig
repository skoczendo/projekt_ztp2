{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.category.delete'|trans }}
{% endblock %}

{% block body %}

    <h1>
        {{ 'title.category.delete'|trans }}
    </h1>

    {% if category is defined and category|length %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ 'label.id'|trans }}</th>
                <th>{{ 'label.name'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
            </tr>
            </tbody>
        </table>
    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}

    <h2>
        {{ 'question.confirmation'|trans }}
    </h2>

    {% include 'default/_form.html.twig' with {
    attr: {
    method: 'post',
    action: url('category_delete', {'id': category.id})
    },
    submit_label: 'delete'
    } %}

    <div class="btn-group">
        <a href="{{ path('category_index') }}" class="btn btn-default" title="{{ 'action.index'|trans }}">
            {{ 'action.index'|trans }}
        </a>
    </div>
{% endblock %}