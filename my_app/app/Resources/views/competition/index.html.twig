{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.competitions'|trans }}
{% endblock %}

{% block body %}


    <div class="container">
        {% include 'default/_flash_messages.html.twig' %}
    </div>

    <h1>{{ 'title.competitions'|trans }}</h1>
    {% if competitions is defined and competitions|length %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ 'label.id'|trans }}</th>
                <th>{{ 'label.date'|trans }}</th>
                <th>{{ 'label.city'|trans }}</th>
                <th scope="col">
                    <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> {{ 'label.actions'|trans }}
                </th>
            </tr>
            </thead>
            <tbody>
            {% for item in competitions %}
                <tr>
                    <td>{{ item.id }}</td>
                    <td>{{ item.date|date('Y-m-d') }}</td>
                    <td>{{ item.city.name }}</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="{{ 'label.actions'|trans }}">
                            <a href="{{ path('competition_view', {'id': item.id}) }}" class="btn btn-default" title="{{ 'action.view'|trans }}">
                                <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                                {{ 'action.view'|trans }}
                            </a>
                        </div>
                    </td>
                    <td>
                        <div class="btn-group">
                            <a href="{{ path('competition_edit', {'id': item.id}) }}" class="btn btn-default" title="{{ 'action.edit'|trans }}">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                {{ 'action.edit'|trans }}
                            </a>
                        </div>
                    </td>
                    <td>
                        <div class="btn-group">
                            <a href="{{ path('competition_delete', {'id': item.id}) }}" class="btn btn-default" title="{{ 'action.delete'|trans }}">
                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                {{ 'action.delete'|trans }}
                            </a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div class="alert alert-warning" role="alert">
            {{ 'message.empty_list'|trans }}
        </div>
    {% endif %}

    <div class="btn-group">
        <a href="{{ path('competition_add') }}" class="btn btn-primary" title="{{ 'action.add'|trans }}">
            {{ 'action.add'|trans }}
        </a>
    </div>

    <div class="navigation text-center">
        {{ pagerfanta(competitions, 'twitter_bootstrap3_translated', { routeName: ('competition_index_paginated') }) }}
    </div>

{% endblock %}
