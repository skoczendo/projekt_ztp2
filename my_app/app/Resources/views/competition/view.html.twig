{% extends 'base.html.twig' %}

{% block body %}

    <h1>{{ 'title.competition'|trans }}</h1>

    {% if competition is defined and competition|length %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ 'label.id'|trans }}</th>
                <th>{{ 'label.date'|trans }}</th>
                <th>{{ 'label.city'|trans }}</th>
                <th scope="col">
                    <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>{{ 'label.actions'|trans }}
                </th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>{{ competition.id }}</td>
                <td>{{ competition.date|date('Y-m-d') }}</td>
                <td>{{ competition.city.name }}</td>
                <td>
                    <div class="btn-group">
                        <a href="{{ path('competition_edit', {'id': competition.id}) }}" class="btn btn-default" title="{{ 'action.edit'|trans }}">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            {{ 'action.edit'|trans }}
                        </a>
                    </div>
                </td>
                <td>
                    <div class="btn-group">
                        <a href="{{ path('competition_delete', {'id': competition.id}) }}" class="btn btn-default" title="{{ 'action.delete'|trans }}">
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                            {{ 'action.delete'|trans }}
                        </a>
                    </div>
                </td>
            </tr>
            </tbody>
        </table>

        <h2>{{ 'label.scores'|trans }}</h2>
        {% if scores is defined and scores|length %}

            <h3>{{ 'label.epee'|trans }}</h3>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>{{ 'label.id'|trans }}</th>
                    <th>{{ 'label.place'|trans }}</th>
                    <th>{{ 'label.points'|trans }}</th>
                    <th>{{ 'label.contestant.surname'|trans }}</th>
                    <th>{{ 'label.contestant.name'|trans }}</th>
                    <th scope="col">
                        <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> {{ 'label.actions'|trans }}
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for item in scores %}
                    {% if item.category.id == '1' %}
                        <tr>
                            <td>{{ item.id }}</td>
                            <td>{{ item.place }}</td>
                            <td>{{ item.points }}</td>
                            <td>{{ item.contestant.surname }}</td>
                            <td>{{ item.contestant.name }}</td>
                            <td>
                                <div class="btn-group">
                                    <a href="{{ path('category_edit', {'id': item.id}) }}" class="btn btn-default" title="{{ 'action.edit'|trans }}">
                                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                        {{ 'action.edit'|trans }}
                                    </a>
                                </div>
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a href="{{ path('category_delete', {'id': item.id}) }}" class="btn btn-default" title="{{ 'action.delete'|trans }}">
                                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                        {{ 'action.delete'|trans }}
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endif %}
                {% endfor %}
                </tbody>
            </table>

            <h3>{{ 'label.sabre'|trans }}</h3>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>{{ 'label.id'|trans }}</th>
                    <th>{{ 'label.place'|trans }}</th>
                    <th>{{ 'label.points'|trans }}</th>
                    <th>{{ 'label.contestant.surname'|trans }}</th>
                    <th>{{ 'label.contestant.name'|trans }}</th>
                    <th scope="col">
                        <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> {{ 'label.actions'|trans }}
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for item in scores %}
                    {% if item.category.id == '2' %}
                        <tr>
                            <td>{{ item.id }}</td>
                            <td>{{ item.place }}</td>
                            <td>{{ item.points }}</td>
                            <td>{{ item.contestant.surname }}</td>
                            <td>{{ item.contestant.name }}</td>
                            <td>
                                <div class="btn-group">
                                    <a href="{{ path('category_edit', {'id': item.id}) }}" class="btn btn-default" title="{{ 'action.edit'|trans }}">
                                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                        {{ 'action.edit'|trans }}
                                    </a>
                                </div>
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a href="{{ path('category_delete', {'id': item.id}) }}" class="btn btn-default" title="{{ 'action.delete'|trans }}">
                                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                        {{ 'action.delete'|trans }}
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endif %}
                {% endfor %}
                </tbody>
            </table>


            <h3>{{ 'label.rapier'|trans }}</h3>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>{{ 'label.id'|trans }}</th>
                    <th>{{ 'label.place'|trans }}</th>
                    <th>{{ 'label.points'|trans }}</th>
                    <th>{{ 'label.contestant.surname'|trans }}</th>
                    <th>{{ 'label.contestant.name'|trans }}</th>
                    <th scope="col">
                        <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> {{ 'label.actions'|trans }}
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for item in scores %}
                    {% if item.category.id == '3' %}
                        <tr>
                            <td>{{ item.id }}</td>
                            <td>{{ item.place }}</td>
                            <td>{{ item.points }}</td>
                            <td>{{ item.contestant.surname }}</td>
                            <td>{{ item.contestant.name }}</td>
                            <td>
                                <div class="btn-group">
                                    <a href="{{ path('category_edit', {'id': item.id}) }}" class="btn btn-default" title="{{ 'action.edit'|trans }}">
                                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                        {{ 'action.edit'|trans }}
                                    </a>
                                </div>
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a href="{{ path('category_delete', {'id': item.id}) }}" class="btn btn-default" title="{{ 'action.delete'|trans }}">
                                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                        {{ 'action.delete'|trans }}
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endif %}
                {% endfor %}
                </tbody>
            </table>



        {% else %}
            <div class="alert alert-warning" role="alert">
                {{ 'message.empty_list'|trans }}
            </div>
        {% endif %}

        <div class="btn-group">
            <a href="{{ path('score_add') }}" class="btn btn-default" title="{{ 'action.add.score'|trans }}">
                {{ 'action.add.score'|trans }}
            </a>
        </div>

    {% else %}
        <div class="alert alert-warning" role="alert">
            {{ 'message.empty_list'|trans }}
        </div>
    {% endif %}

    <div class="btn-group">
        <a href="{{ path('competition_index') }}" class="btn btn-default" title="{{ 'action.index'|trans }}">
            {{ 'action.index'|trans }}
        </a>
    </div>

{% endblock %}

