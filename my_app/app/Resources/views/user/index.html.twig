{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.users'|trans }}
{% endblock %}

{% block body %}


    <div>
        {% include 'default/_flash_messages.html.twig' %}
    </div>

    <h1>{{ 'title.admins'|trans }}</h1>
    {% if users is defined and users|length %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ 'label.username'|trans }}</th>
                <th>{{ 'label.email'|trans }}</th>
                <th>{{ 'label.last.login'|trans }}</th>
                <th scope="col">
                    <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> {{ 'label.actions'|trans }}
                </th>
            </tr>
            </thead>
            <tbody>
            {{ dump(users) }}
            {% for item in users %}
                <tr>
                    <td>{{ item.username }}</td>
                    <td>{{ item.email }}</td>
                    <td>{{ item.lastLogin|date('Y-m-d') }}</td>
                    <td>
                        <div class="btn-group">
                            <a href="{{ path('user_delete', {'username': item.username}) }}" class="btn btn-default" title="{{ 'action.delete'|trans }}">
                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                {{ 'action.delete'|trans }}
                            </a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    {% else %}
        <div class="alert alert-warning" role="alert">
            {{ 'message.empty_list'|trans }}
        </div>
    {% endif %}

    <div class="btn-group">
        <a href="{{ path('fos_user_registration_register') }}" class="btn btn-default" title="{{ 'action.add'|trans }}">
            {{ 'action.add'|trans }}
        </a>
    </div>


{% endblock %}
