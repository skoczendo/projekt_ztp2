{% extends 'base.html.twig' %}

{% block body %}

    <h1>{{ 'title.school'|trans }}</h1>

    {% if school is defined and school|length %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ 'label.id'|trans }}</th>
                <th>{{ 'label.name'|trans }}</th>
                <th scope="col">
                    <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>{{ 'label.actions'|trans }}
                </th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>{{ school.id }}</td>
                <td>{{ school.name }}</td>
                <td>
                    <div class="btn-group">
                        <a href="{{ path('school_edit', {'id': school.id}) }}" class="btn btn-default" title="{{ 'action.edit'|trans }}">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            {{ 'action.edit'|trans }}
                        </a>
                    </div>
                </td>
                <td>
                    <div class="btn-group">
                        <a href="{{ path('school_delete', {'id': school.id}) }}" class="btn btn-default" title="{{ 'action.delete'|trans }}">
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                            {{ 'action.delete'|trans }}
                        </a>
                    </div>
                </td>
            </tr>
            </tbody>
        </table>
    {% else %}
        <div class="alert alert-warning" role="alert">
            {{ 'message.empty_list'|trans }}
        </div>
    {% endif %}

    <h2>{{ 'title.enrolled.list'|trans }}</h2>

    {% if contestants is defined and contestants|length %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ 'label.id'|trans }}</th>
                <th>{{ 'label.surname'|trans }}</th>
                <th>{{ 'label.name'|trans }}</th>
                <th>{{ 'label.sex'|trans }}</th>
                <th>{{ 'label.date_of_birth'|trans }}</th>
                <th>{{ 'label.epee'|trans }}</th>
                <th>{{ 'label.sabre'|trans }}</th>
                <th>{{ 'label.rapier'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for person in contestants %}
                <tr>
                    <td>{{ person.id }}</td>
                    <td>{{ person.surname }}</td>
                    <td>{{ person.name }}</td>
                    <td>
                        {% if person.sex == "m" %}
                            {{ 'label.male'|trans }}
                        {% elseif person.sex == "f" %}
                            {{ 'label.female'|trans }}
                        {% endif %}
                    </td>
                    <td>{{ person.dateOfBirth|date('Y-m-d') }}</td>
                    <td>
                        {% if person.epee %}
                            {{ 'label.yes'|trans }}
                        {% else %}
                            {{ 'label.no'|trans }}
                        {% endif %}
                    </td>
                    <td>
                        {% if person.sabre %}
                            {{ 'label.yes'|trans }}
                        {% else %}
                            {{ 'label.no'|trans }}
                        {% endif %}
                    </td>
                    <td>
                        {% if person.rapier %}
                            {{ 'label.yes'|trans }}
                        {% else %}
                            {{ 'label.no'|trans }}
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    {% else %}
        <div class="alert alert-warning" role="alert">
            {{ 'message.empty_list'|trans }}
        </div>
    {% endif %}

    <div class="btn-group">
        <a href="{{ path('school_index') }}" class="btn btn-default" title="{{ 'action.index'|trans }}">
            {{ 'action.index'|trans }}
        </a>
    </div>

{% endblock %}

