{% extends 'base.html.twig' %}

{% block body %}

    <h1>{{ 'title.contestant'|trans }}</h1>

    {% if contestant is defined and contestant|length %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ 'label.id'|trans }}</th>
                <th>{{ 'label.surname'|trans }}</th>
                <th>{{ 'label.name'|trans }}</th>
                <th>{{ 'label.sex'|trans }}</th>
                <th>{{ 'label.date_of_birth'|trans }}</th>
                <th>{{ 'label.epee'|trans }}</th>
                <th>{{ 'label.sabre'|trans }}</th>
                <th>{{ 'label.rapier'|trans }}</th>
                <th>{{ 'label.school'|trans }}</th>
                <th scope="col">
                    <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>{{ 'label.actions'|trans }}
                </th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>{{ contestant.id }}</td>
                <td>{{ contestant.surname }}</td>
                <td>{{ contestant.name }}</td>
                <td>
                    {% if contestant.sex == "m" %}
                        {{ 'label.male'|trans }}
                    {% elseif contestant.sex == "f" %}
                        {{ 'label.female'|trans }}
                    {% endif %}
                </td>
                <td>{{ contestant.dateOfBirth|date('Y-m-d') }}</td>
                <td>
                    {% if contestant.epee %}
                        {{ 'label.yes'|trans }}
                    {% else %}
                        {{ 'label.no'|trans }}
                    {% endif %}
                </td>
                <td>
                    {% if contestant.sabre %}
                        {{ 'label.yes'|trans }}
                    {% else %}
                        {{ 'label.no'|trans }}
                    {% endif %}
                </td>
                <td>
                    {% if contestant.rapier %}
                        {{ 'label.yes'|trans }}
                    {% else %}
                        {{ 'label.no'|trans }}
                    {% endif %}
                </td>
                <td>{{ contestant.school.name }}</td>
                <td>
                    <div class="btn-group">
                        <a href="{{ path('contestant_edit', {'id': contestant.id}) }}" class="btn btn-default" title="{{ 'action.edit'|trans }}">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            {{ 'action.edit'|trans }}
                        </a>
                    </div>
                </td>
                <td>
                    <div class="btn-group">
                        <a href="{{ path('contestant_delete', {'id': contestant.id}) }}" class="btn btn-default" title="{{ 'action.delete'|trans }}">
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                            {{ 'action.delete'|trans }}
                        </a>
                    </div>
                </td>
            </tr>
            </tbody>
        </table>
    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}

    <div class="btn-group">
        <a href="{{ path('contestant_index') }}" class="btn btn-default" title="{{ 'action.index'|trans }}">
            {{ 'action.index'|trans }}
        </a>
    </div>

{% endblock %}

